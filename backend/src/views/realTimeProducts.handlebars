<h1>Productos en Tiempo Real</h1>

<ul id="productsList">
  {{#each products}}
    <li data-id="{{this.id}}">
      {{this.title}} - ${{this.price}}
      <form action="/api/products/delete/{{this.id}}" method="POST" style="display:inline;">
        <button type="submit">Eliminar</button>
      </form>
    </li>
  {{/each}}
</ul>

